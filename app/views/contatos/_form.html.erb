<%= form_with(model: contato, local: true) do |form| %>
  <% if contato.errors.any? %>
    <div id="error_explanation">
    <h2>Existem <%= pluralize(contato.errors.count, "erro") %> </h2>
      <ul>
      <% contato.errors.full_messages.each do |msg| %>
        <% if msg === "Mensagem can't be blank" %>
              <li>Você deve inserir uma mensagem</li>
          <% elsif msg === "Nome can't be blank" %>
              <li>Você deve inserir um nome</li>
          <% elsif msg === "Telefone can't be blank" %>
              <li>Você deve inserir um telefone</li>
          <% elsif msg === "Email can't be blank" %>
              <li>Você deve inserir um email</li>
          <% elsif msg === "Email is invalid" %>
              <li>O email é inválido</li>
          <% else %>
              <li> <%= msg %> </li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :telefone %>
    <%= form.text_field :telefone %>
  </div>

  <div class="field">
    <%= form.label :mensagem %>
    <%= form.text_area :mensagem %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar"%>
  </div>
<% end %>
